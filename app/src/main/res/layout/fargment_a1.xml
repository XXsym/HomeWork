<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.youth.banner.Banner
        android:id="@+id/a1_banner"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:delay_time="4000"
        app:layout_constraintDimensionRatio="5:2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/a1_text2" />

    <ImageView
        android:id="@+id/a1_img1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toStartOf="@+id/a1_img2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/subject" />

    <ImageView
        android:id="@+id/a1_img2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toStartOf="@+id/a1_img3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/a1_img1"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/test" />

    <ImageView
        android:id="@+id/a1_img3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toStartOf="@+id/a1_img4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/a1_img2"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/restudy" />

    <ImageView
        android:id="@+id/a1_img4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/a1_img3"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/qiandao" />

    <TextView
        android:id="@+id/a1_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/black"
        android:text="推荐科目"
        app:layout_constraintEnd_toEndOf="@+id/a1_img1"
        app:layout_constraintStart_toStartOf="@+id/a1_img1"
        app:layout_constraintTop_toBottomOf="@+id/a1_img1" />

    <TextView
        android:id="@+id/a1_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/black"
        android:text="每日一练"
        app:layout_constraintEnd_toEndOf="@+id/a1_img2"
        app:layout_constraintStart_toStartOf="@+id/a1_img2"
        app:layout_constraintTop_toBottomOf="@+id/a1_img2" />

    <TextView
        android:id="@+id/a1_text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/black"
        android:text="复习"
        app:layout_constraintEnd_toEndOf="@+id/a1_img3"
        app:layout_constraintStart_toStartOf="@+id/a1_img3"
        app:layout_constraintTop_toBottomOf="@+id/a1_img3" />

    <TextView
        android:id="@+id/a1_text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/black"
        android:text="签到"
        app:layout_constraintEnd_toEndOf="@+id/a1_img4"
        app:layout_constraintStart_toStartOf="@+id/a1_img4"
        app:layout_constraintTop_toBottomOf="@+id/a1_img4" />

    <ImageView
        android:id="@+id/a1_v1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/a1_banner"
        app:srcCompat="@mipmap/right" />

    <TextView
        android:id="@+id/a1_mine_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="我的进度 - 2018年9月"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/a1_v1"
        app:layout_constraintStart_toEndOf="@+id/a1_v1"
        app:layout_constraintTop_toTopOf="@+id/a1_v1" />

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/a1_chart"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/a1_v1" />

</android.support.constraint.ConstraintLayout>