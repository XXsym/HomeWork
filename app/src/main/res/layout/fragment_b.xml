<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbars="vertical"
    android:fadingEdge="vertical">

    <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="精选错题分类"
            android:textSize="30sp"
            android:textColor="#000000"
            android:layout_gravity="center"/>

        <com.google.android.flexbox.FlexboxLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/flexbox_layout"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:drawablePadding="5dp"
            app:alignContent="flex_start"
            app:alignItems="center"
            app:dividerDrawable="@drawable/divider_shape"
            app:flexDirection="row"
            app:flexWrap="nowrap"
            app:justifyContent="flex_start"
            app:showDividerVertical="middle"
            >

            <TextView
                android:layout_width="89dp"
                android:layout_height="40dp"
                android:layout_margin="8dp"
                android:background="@drawable/divider_shape"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="一年级"
                android:textColor="#4F4F4F"
                app:layout_alignSelf="flex_start" />

            <TextView
                android:layout_width="89dp"
                android:layout_height="40dp"
                android:layout_margin="8dp"
                android:background="@drawable/divider_shape"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="二年级"
                android:textColor="#4F4F4F"
                app:layout_alignSelf="flex_start" />

            <TextView
                android:layout_width="89dp"
                android:layout_height="40dp"
                android:layout_margin="8dp"
                android:background="@drawable/divider_shape"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="三年级"
                android:textColor="#4F4F4F"
                app:layout_alignSelf="flex_start" />


            <Button
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="8dp"
                android:background="@mipmap/plus"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_alignSelf="flex_start"
                />


        </com.google.android.flexbox.FlexboxLayout>

        <com.google.android.flexbox.FlexboxLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/flexbox_layout1"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginTop="5dp"
            app:alignContent="flex_start"
            app:alignItems="center"
            app:dividerDrawable="@drawable/divider_shape"
            app:flexDirection="row"
            app:flexWrap="wrap"
            app:justifyContent="flex_start"
            app:showDividerVertical="middle">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_margin="8dp"
                android:background="@drawable/divider_shape"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="语文"
                android:textColor="#4F4F4F"
                app:layout_alignSelf="flex_start"
                tools:layout_editor_absoluteX="50dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_margin="8dp"
                android:background="@drawable/divider_shape"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="数学"
                android:textColor="#4F4F4F"
                app:layout_alignSelf="flex_start" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_margin="8dp"
                android:background="@drawable/divider_shape"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="英语"
                android:textColor="#4F4F4F"
                app:layout_alignSelf="flex_start" />

            <Button
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="18dp"
                android:background="@mipmap/plus"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                app:layout_alignSelf="flex_start"
                app:layout_constraintRight_toRightOf="parent" />

        </com.google.android.flexbox.FlexboxLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="热门推荐"
                android:textColor="#000000"
                android:textSize="30sp" />

            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="查看全部"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:textColor="#0011ff" />
        </RelativeLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="212dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="135sp"
                        android:layout_height="180sp"
                        android:src="@drawable/shi_pic" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="古诗欣赏1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="135sp"
                        android:layout_height="180sp"
                        android:src="@drawable/shi_pic" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="古诗欣赏2" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="135sp"
                        android:layout_height="180sp"
                        android:src="@drawable/shi_pic" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="古诗欣赏3" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="135sp"
                        android:layout_height="180sp"
                        android:src="@drawable/shi_pic" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="古诗欣赏4" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="135sp"
                        android:layout_height="180sp"
                        android:src="@drawable/shi_pic" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="古诗欣赏5" />
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="错题精选"
            android:textColor="#000000"
            android:textSize="30sp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="196dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="156dp"
                android:layout_height="96dp"
                android:layout_margin="5dp"
                android:src="@drawable/f" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/content_subject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="科目：" />

                <TextView
                    android:id="@+id/grade"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="年级：" />

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="难度：" />

                <RatingBar
                    android:id="@+id/degree_of_difficult"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:numStars="5"
                    android:rating="3"
                    android:stepSize="0.5" />

            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="196dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="156dp"
                android:layout_height="96dp"
                android:layout_margin="5dp"
                android:src="@drawable/f" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/content_subject1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="科目：" />

                <TextView
                    android:id="@+id/grade1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="年级：" />

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="难度：" />

                <RatingBar
                    android:id="@+id/degree_of_difficult1"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:numStars="5"
                    android:rating="3"
                    android:stepSize="0.5" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>